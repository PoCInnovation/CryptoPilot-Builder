{
  "name": "crypto-pilot-builder",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron main.js",
    "build": "npm run build:vite && electron-builder",
    "build:vite": "vite build",
    "preview": "vite preview",
    "start": "electron main.js",
    "electron": "electron main.js"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "viem": "2.30.6",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^25.1.8",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.6",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.cryptopilot.app",
    "productName": "Crypto Pilot",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
